# Database Configuration
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=api_db
DB_PORT=5432

# Server Configuration
PORT=3001
NODE_ENV=development

# Proxy Configuration
# Em produção (Railway, Heroku, etc), trust proxy é habilitado automaticamente
# Use esta variável para configuração customizada em outros ambientes:
# - true: confia em qualquer proxy
# - 1: confia no primeiro proxy
# - false: não confia em proxies
# TRUST_PROXY=1

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Password Reset)
EMAIL_FROM=noreply@api.com
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Frontend URL (for password reset links and CORS)
FRONTEND_URL=http://localhost:5173

# CORS Configuration
# Lista de origens permitidas separadas por vírgula
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001
# Permitir todas as origens em desenvolvimento (use com cuidado)
CORS_ALLOW_ALL=true

# Request Body Size Limits
# Limite de tamanho para parsing de JSON e URL-encoded data
JSON_LIMIT=10mb
URL_ENCODED_LIMIT=10mb

# Logging Configuration
# Nível de log: error, warn, info, http, debug
LOG_LEVEL=info
# Diretório onde os logs serão salvos
LOG_DIR=logs
# Tamanho máximo de cada arquivo de log antes de rotacionar
LOG_MAX_SIZE=20m
# Tempo de retenção dos arquivos de log (em dias)
LOG_MAX_FILES=14d
# Formato dos logs: json ou simple
LOG_FORMAT=json

# Rate Limiting Configuration
# Limitador geral - janela de tempo em milissegundos (15 minutos = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
# Limitador geral - máximo de requisições por janela
RATE_LIMIT_MAX_REQUESTS=100

# Limitador de autenticação - janela de tempo em milissegundos (15 minutos)
AUTH_RATE_LIMIT_WINDOW_MS=900000
# Limitador de autenticação - máximo de tentativas por janela
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Limitador de reset de senha - janela de tempo em milissegundos (1 hora = 3600000ms)
PASSWORD_RESET_RATE_LIMIT_WINDOW_MS=3600000
# Limitador de reset de senha - máximo de tentativas por janela
PASSWORD_RESET_RATE_LIMIT_MAX_REQUESTS=3
